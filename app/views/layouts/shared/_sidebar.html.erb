<div class="container-fluid overflow-hidden">
  <div class="row vh-100 overflow-auto">
    <div class="col-12 col-sm-3 col-xl-2 px-sm-2 px-0 bg-light border-end border-dark d-flex sticky-top">
      <div class="d-flex flex-sm-column flex-row flex-grow-1 align-items-center align-items-sm-start px-3 pt-2 text-black">
        <a href="/" class="d-flex align-items-center pb-sm-3 mb-md-0 me-md-auto text-black text-decoration-none">
          <%= link_to root_path, class: "navbar-brand mx-auto d-none d-sm-inline" do %>
            <%= image_tag "logo.png" %>
          <% end %>
        </a>
        <ul class="nav nav-pills flex-sm-column flex-row flex-nowrap flex-shrink-1 flex-sm-grow-0 flex-grow-1 mb-sm-auto mb-0 justify-content-center align-items-center align-items-sm-start m-auto" id="menu">
          <li class="nav-item">
            <a href="/" class="dropdown-item px-sm-0 px-2">
              <i class="fs-5 bi-bar-chart-line"></i><span class="ms-1 d-none d-sm-inline h5">Dashboard</span>
            </a>
          </li>
          <li>
            <a href="/promotions" class="dropdown-item px-sm-0 px-2">
              <i class="fs-5 bi-coin"></i><span class="ms-1 d-none d-sm-inline h5">Promotion</span>
            </a>
          </li>
          <li>
            <a href="#" class="dropdown-item px-sm-0 px-2">
              <i class="fs-5 bi-briefcase"></i><span class="ms-1 d-none d-sm-inline h5">Portfolio</span>
            </a>
          </li>
          <li>
            <a href="#" class="dropdown-item px-sm-0 px-2">
              <i class="fs-5 bi-wallet"></i><span class="ms-1 d-none d-sm-inline h5">Wallet</span>
            </a>
          </li>
          <li>
            <a href="#" class="dropdown-item px-sm-0 px-2">
              <i class="fs-5 bi-person-circle"></i><span class="ms-1 d-none d-sm-inline h5">My Profile</span>
            </a>
          </li>
        </ul>
        <div class="dropdown py-sm-4 mt-sm-auto ms-auto ms-sm-0 flex-shrink-1">
          <a href="#" class="d-flex align-items-center text-black text-decoration-none dropdown-toggle" id="dropdownUser1" data-bs-toggle="dropdown" aria-expanded="false">
