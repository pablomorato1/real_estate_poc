<%= link_to property_path(@properties.find { |prop| prop.id == archive_card[:propertyId] }.id, tab: 'archive'), class: "portfolio_card" do %>
  <%= image_tag url_for(@properties.find { |prop| prop.id == archive_card[:propertyId] }.image), class: "assets_card_image", width: 140, height: 140, alt: "preview" %>
  <div class="p-3 flex-fill">
    <div class="portfolio_card_header">
      <div>
        <p class="siText mb-2 siText__label siText__colorPrimary"><%= @properties.find { |prop| prop.id == archive_card[:propertyId] }.name %></p>
        <div class="d-flex mb-3 align-items-center">
          <span class="siText siText__regular siText__colorPrimary"><%= @properties.find { |prop| prop.id == archive_card[:propertyId] }.address %></span>
          <span class="siBadge ms-2"><%= (@properties.find { |prop| prop.id == archive_card[:propertyId] }.prop_type == 'passive') ? 'passive' : 'active' %></span>
        </div>
      </div>
      <p><%= archive_card[:createdAt].to_date.strftime("%d.%m.%Y") %>-<%= archive_card[:soldAt].to_date.strftime("%d.%m.%Y") %></p>
    </div>
    <div class="portfolio_card_footer">
      <div>
        <p class="siText siText__label siText__colorPrimary">Equity cost</p>
        <p class="portfolio_card_value siText siText__subtitle siText__colorPrimary" data-i18n-target="$"><%= archive_card[:equityCost] %></p>
      </div>
      <div>
        <p class="siText siText__label siText__colorPrimary">Equity</p>
        <p class="portfolio_card_value siText siText__subtitle siText__colorPrimary" data-i18n-target="percent"><%= archive_card[:equity] %></p>
      </div>
      <div>
        <p class="siText siText__label siText__colorPrimary">Projected yield</p>
        <p class="portfolio_card_value siText siText__subtitle siText__colorPrimary" data-i18n-target="percent"><%= archive_card[:projectedYield] %></p>
      </div>
      <div>
        <p class="siText siText__label siText__colorPrimary">Property cost</p>
        <p class="portfolio_card_value siText siText__subtitle siText__colorPrimary" data-i18n-target="$"><%= @properties.find { |prop| prop.id == archive_card[:propertyId] }.price %></p>
      </div>
      <div>
        <p class="siText siText__label siText__colorPrimary">Total income</p>
        <p class="portfolio_card_value siText siText__subtitle siText__colorPrimary" data-i18n-target="$"><%= archive_card[:income] %></p>
      </div>
    </div>
  </div>
<% end %>
