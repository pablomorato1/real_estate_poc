<%= link_to property_path(archive_card.id, tab: 'archive'), class: "portfolio_card" do %>
  <%= image_tag url_for(archive_card.image), class: "assets_card_image", width: 140, height: 140, alt: "preview" %>
  <div class="p-3 flex-fill">
    <div class="portfolio_card_header">
      <div>
        <p class="siText mb-2 siText__label siText__colorPrimary"><%= archive_card.name %></p>
        <div class="d-flex mb-3 align-items-center">
          <span class="siText siText__regular siText__colorPrimary"><%= archive_card.address %></span>
          <span class="siBadge ms-2"><%= archive_card.prop_type %></span>
        </div>
      </div>
      <!-- On the "2.days.from_now" there should be the "sold at" field from the investment object on database -->
      <p><%= archive_card.created_at.strftime("%d.%m.%Y") %>-<%= 2.days.from_now.to_date.strftime("%d.%m.%Y") %></p>
    </div>
    <div class="portfolio_card_footer">
      <div>
        <p class="siText siText__label siText__colorPrimary">Equity cost</p>
        <p class="portfolio_card_value siText siText__subtitle siText__colorPrimary" data-i18n-target="$"><%= archive_card.min_investment %></p>
      </div>
      <div>
        <p class="siText siText__label siText__colorPrimary">Equity</p>
        <p class="portfolio_card_value siText siText__subtitle siText__colorPrimary" data-i18n-target="percent"><%= archive_card.min_equity %></p>
      </div>
      <div>
        <p class="siText siText__label siText__colorPrimary">Projected yield</p>
        <p class="portfolio_card_value siText siText__subtitle siText__colorPrimary" data-i18n-target="percent"><%= archive_card.yield_plan %></p>
      </div>
      <div>
        <p class="siText siText__label siText__colorPrimary">Property cost</p>
        <p class="portfolio_card_value siText siText__subtitle siText__colorPrimary" data-i18n-target="$"><%= archive_card.price %></p>
      </div>
      <div>
        <p class="siText siText__label siText__colorPrimary">Total income</p>
        <p class="portfolio_card_value siText siText__subtitle siText__colorPrimary" data-i18n-target="$"><%= archive_card[:income] %></p>
      </div>
    </div>
  </div>
<% end %>
