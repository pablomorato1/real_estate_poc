<div class="card flex-row mb-4">
  <%= image_tag (property.image.present? ? url_for(property.image) : "logo.png"), class: "card-img-top", style: "width: 10%" %>
  <div class="card-body">
    <div class="flex-column">
      <div class="d-flex flex-row justify-content-between border-bottom border-dark">
        <div class="w-25">
          <p class="card-text mb-1">
            <small class="text-muted">
              <%= link_to property.name, property_path(property, tab: 'overview'), method: :get, class: "text-muted", data: { turbo_frame: "_top" } %>
            </small>
          </p>
          <h5 class="card-title"><%= property.address %></h5>
        </div>
        <div class="w-25 d-flex justify-content-end align-items-start">
          <%= link_to "Send Request", "#", method: :get, class: "btn btn-warning" %>
        </div>
      </div>
      <div class="d-flex flex-row justify-content-between">
        <div>
          <p class="card-text mb-1"><small class="text-muted">Minimum Investment</small></p>
          <p class="card-text">$<%= property.min_investment %></p>
        </div>
        <div>
          <p class="card-text mb-1"><small class="text-muted">Equity</small></p>
          <p class="card-text"><%= property.managed_equity %>%</p>
        </div>
        <div>
          <p class="card-text mb-1"><small class="text-muted">Projected Yield</small></p>
          <p class="card-text"><%= property.yield_plan %></p>
        </div>
        <div>
          <p class="card-text mb-1"><small class="text-muted">Property Cost</small></p>
          <p class="card-text">$<%= property.price %></p>
        </div>
        <div>
          <p class="card-text mb-1"><small class="text-muted">Cost per square meter</small></p>
          <p class="card-text">$<%= property.square_meter_cost %></p>
        </div>
      </div>
    </div>
  </div>
</div>
