<div
  class="promotions_card"
  data-property-card-target="card"
  data-property-card-url-param="/properties/<%= property_card[:id] %>/overview"
  data-action="click->property-card#navigateToDetails"
>
  <img class="promotions_card_image" src="<%= property_card[:thumbnail] %>" width="140" height="140" alt="preview">
  <div class="p-3 flex-fill">
    <div class="promotions_card_header">
      <div>
        <p class="siText mb-2 siText__label siText__colorPrimary"><%= property_card[:name] %></p>
        <div class="d-flex mb-3 align-items-center">
          <span class="siText siText__regular siText__colorPrimary"><%= property_card[:name2] %></span>
          <span class="Badge_base ms-2">active</span>
        </div>
      </div>
      <button
        type="button"
        class="btn btn-secondary btn-lg"
        data-property-card-url-param="<%= property_card[:id] %>"
        data-property-card-target="request"
        data-action="click->property-card#sendBuyRequest:stop"
      >
        Send Request
      </button>
    </div>
    <div class="promotions_card_footer">
      <div>
        <p class="siText siText__label siText__colorPrimary">Minimum investment</p>
        <p class="promotions_card_value siText siText__subtitle siText__colorSecondary"><%= property_card[:minInvest] %></p>
      </div>
      <div>
        <p class="siText siText__label siText__colorPrimary">Equity</p>
        <p class="promotions_card_value siText siText__subtitle siText__colorSecondary"><%= property_card[:equity] %></p>
      </div>
      <div>
        <p class="siText siText__label siText__colorPrimary">Projected yield</p>
        <p class="promotions_card_value siText siText__subtitle siText__colorSecondary"><%= property_card[:projectedYield] %></p>
      </div>
      <div>
        <p class="siText siText__label siText__colorPrimary">Property cost</p>
        <p class="promotions_card_value siText siText__subtitle siText__colorPrimary"><%= property_card[:costTotal] %></p>
      </div>
      <div>
        <p class="siText siText__label siText__colorPrimary">Cost per square meter</p>
        <p class="promotions_card_value siText siText__subtitle siText__colorPrimary"><%= property_card[:costPerMeter] %></p>
      </div>
    </div>
  </div>
</div>
